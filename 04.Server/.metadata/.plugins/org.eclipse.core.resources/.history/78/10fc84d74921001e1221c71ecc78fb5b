package com;

import java.io.IOException;
import java.net.InetAddress;

public class PingAT {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		String targetHost = "192.168.0.9";
        int numPackets = 100; // 보낼 패킷 수

        try {
            InetAddress targetAddress = InetAddress.getByName(targetHost);

            // 패킷 전송
            for (int i = 0; i < numPackets; i++) {
                targetAddress.isReachable(5000); // 5000ms(5초) 내에 응답 확인
                System.out.println("패킷 전송: " + (i + 1));
            }
        } catch (IOException e) {
            e.printStackTrace();
        }
	}

}
