<!DOCTYPE html>
<html>
<head>
<meta charset="EUC-KR">
<title>Insert title here</title>
</head>
<body>

	<div id="result-area"></div>
	<button id="req-btn">데이터요청</button>
	
	<script src="js/jquery-3.7.0.js"></script>
	<script>
		$("#req-btn").on("click", function(){
			
			$.ajax({
				url:"JavaToJson",
				success:function(res){
					let resultHTML =`<table border="1"><tr><th>메뉴명</th><th>가격</th><th>사이즈</th></tr>`;
					
					for(let i=0; i<res.length;i++){
						resultHTML += `<tr><td>${res[i].menuNm}</td><td>${res[i].price}</td><td>${res[i].size}</td></tr>`;
					}
					resultHTML += `</table>`;
					$("#result-area").html(resultHTML);
				},
				error:function(){
					alert("요청실패...");
				}
			}); // ajax end
		}); // event end
	
	
	</script>
	
</body>
</html>